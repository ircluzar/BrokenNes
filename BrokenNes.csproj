<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <OverrideHtmlAssetPlaceholders>true</OverrideHtmlAssetPlaceholders>
  <RootNamespace>BrokenNes</RootNamespace>
  <AssemblyName>BrokenNes</AssemblyName>
  <!-- Performance oriented tweaks -->
  <RunAOTCompilation>true</RunAOTCompilation>
  <WasmEnableSIMD>true</WasmEnableSIMD>
  <InvariantGlobalization>true</InvariantGlobalization>
  <BlazorEnableTimeZoneSupport>false</BlazorEnableTimeZoneSupport>
  <TrimMode>link</TrimMode>
  <PublishTrimmed>true</PublishTrimmed>
  <DebugType>portable</DebugType>
  <Optimize>true</Optimize>
  <DefineConstants>$(DefineConstants);FAST_EMU</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="10.0.0-preview.6.25358.103" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="10.0.0-preview.6.25358.103" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="NesEmulator\NETNES_REFERENCE\**" />
    <Content Remove="NesEmulator\NETNES_REFERENCE\**" />
    <EmbeddedResource Remove="NesEmulator\NETNES_REFERENCE\**" />
    <None Remove="NesEmulator\NETNES_REFERENCE\**" />
  </ItemGroup>

</Project>
